{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./configs/env/.env.*",
        "outDir": "./dist/src"
      },
      {
        "include": "./configs/swagger/swagger.json",
        "outDir": "./dist/src"
      },
      {
        "include": "../prisma/schema.prisma",
        "outDir": "./dist/prisma"
      },
      {
        "include": "../tsconfig.json",
        "outDir": "./dist"
      }
    ]
  }
}
